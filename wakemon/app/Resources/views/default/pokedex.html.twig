{% extends 'base.html.twig' %}

{% block body %}
    {% set evolve = false %}
    {% set pokemon_description = "description_not_available" %}
    {% for description in pokemon_species.flavor_text_entries %}
        {% if description.language.name is same as("en") %}
            {% set pokemon_description = description.flavor_text %}
        {% endif %}
    {% endfor %}

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Press+Start+2P">
    <div id="pokedex">
        <div class="sensor">
            <button></button>
        </div>
        <div class="camera-display">
            {% if pokemon is not same as(null) %}
                <img src="{{ pokemon.sprites.front_default }}"/>
            {% else %}
                <img src="https://t2.rbxcdn.com/72ff3d231dbf024a80b23adfa8fb49a1">
            {% endif %}
        </div>
        <div class="divider"></div>
        <div class="stats-display">
            {% if pokemon is not same as(null) %}
                <h2>{{ pokemon.name | capitalize }}</h2>
                <h3>Description</h3>
                <h4>
                    {{ pokemon_description }}
                </h4>
                <h3>Types:</h3>
                <ul>
                {% for type in pokemon.types %}
                    <li>{{ type.type.name }}</li>
                {% endfor %}
                </ul>
                <h3>Stats</h3>
                <ul>
                {% for stats in pokemon.stats %}
                    <li>{{ stats.base_stat }} {{ stats.stat.name }}</li>
                {% endfor %}
                </ul>
                <h3>Weight</h3>
                <h4>{{ (pokemon.weight / 10)|number_format(1, ',') }} kg</h4>
                <h3>Height</h3>
                <h4>{{ (pokemon.height/10)|number_format(1,',') }} m</h4>
                <h3>Abilities</h3>
                <ul>
                    {% for ability in pokemon.abilities %}
                        <li>{{ ability.ability.name }}</li>
                    {% endfor %}
                </ul>
                <h3>Moves</h3>
                <ul>
                    {% for attacks in pokemon.moves %}
                        <li>{{ attacks.move.name }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                <h4>Pokemon not found</h4>
            {% endif %}
        </div>
        <div class="botom-actions">
            <div id="actions">
                <button class="a"></button>
            </div>
            <div id="cross">
                <button class="cross-button up"></button>
                <button class="cross-button right"
                </button>
                <button class="cross-button down"></button>
                <button class="cross-button left"></button>
                <div class="cross-button center"></div>
            </div>
        </div>
        <div class="input-pad"><input/></div>

        <div class="bottom-modes">

            <button class="level-button"></button>
            <button class="level-button"></button>
            <button class="level-button"></button>
            <button class="level-button"></button>

            <button class="pokedex-mode black-button">Pokedex</button>
            <button class="game-mode black-button">Game</button>

        </div>
    </div>
    {% if evolution is not empty %}
        {% for pokemon_evolution in evolution %}
            {% if pokemon_evolution is not same as(from_pokemon) %}
                {% set evolve = true %}
            {% endif %}
        {% endfor %}
    {% else %}
    {% endif %}
    {% if from_pokemon is not same as(null) %}
        Evolution précédente:
        <a href="{{ from_pokemon }}">{{ from_pokemon }}</a>
    {% endif %}

    {% if evolve is same as(true) %}
        Evolution(s) :
        {% for pokemon_evolution in evolution %}
            {% if pokemon_evolution is not same as(from_pokemon) %}
                <a href="/pokemon/{{ pokemon_evolution }}">{{ pokemon_evolution }}</a>
            {% endif %}
        {% endfor %}
    {% else %}
        Ce pokemon n'a pas d'évolution
    {% endif %}
    <style>


        #pokedex {
            width: 800px;
            height: 600px;
            margin: auto;
            background-color: #dd0b2d;
            border: #88061c 10px solid;
            border-top-width: 20px;
            z-index: 2;
            display: grid;
            grid-template-columns: 5% 40% 10% 40% 5%;
            grid-template-rows: 3% 12% 40% 20% 20% 5%;
            border-radius: 2%;
            font-family: "Press Start 2P";
        }

        .camera-display {
            background-color: #E5F6FC;
            border-radius: 5%;
            border: 30px solid #E6E6E6;
            grid-column-start: 2;
            grid-row-start: 3;
            grid-row-end: 5;
        }

        .camera-display img {
            width: 100%;
            height: auto;
        }

        .divider {
            background-color: #88061c;
            grid-column-start: 3;
            grid-row-start: 1;
            grid-row-end: 7;
            margin: 0 30px;
        }

        .stats-display {
            background-color: #9fdab1;
            border-radius: 0%;
            border: 5px solid #E6E6E6;
            grid-column-start: 4;
            grid-row-start: 3;
            padding: 15px;
            overflow: scroll;
        }

        .stats-display h2 {
            margin: 10px 0;
        }

        .stats-display ul {
            margin: 10px;
            overflow: auto;
        }

        .sensor {
            grid-column-start: 2;
            grid-row-start: 2;
        }

        .sensor button {
            cursor: pointer;
            background: #71CDF4;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: block;
            margin: auto;
            z-index: 3;
            float: left;
            margin-left: 25px;
            border: 3px solid white;
        }

        .botom-actions {
            grid-column-start: 2;
            grid-row-start: 5;
            display: grid;
            grid-template-columns: 25% 25% 15% 35%;
            grid-template-rows: 10% 80% 10%;
        }

        #actions {
            grid-column-start: 1;
            grid-row-start: 2;
            grid-row-end: 5;
        }

        #actions .a {
            border-radius: 50%;
            width: 60px;
            height: 60px;
            background-color: #404040;
            border: 5px solid #303030;
            cursor: pointer;
        }

        #cross {
            grid-column-start: 4;
            grid-row-start: 2;
            grid-row-end: 5;
            display: grid;
            grid-template-columns: 33.33% 33.33% 33.33%;
            grid-template-rows: 33.33% 33.33% 33.33%;
        }

        #cross .cross-button {
            background-color: #404040;
            border: #303030;
            color: red;
            cursor: pointer;
            border-style: solid;
        }

        #cross .up {
            grid-row-start: 1;
            grid-column-start: 2;
            border-width: 5px 5px 0px 5px;
        }

        #cross .right {
            grid-row-start: 2;
            grid-column-start: 1;
            border-width: 5px 0px 5px 5px;
        }

        #cross .down {
            grid-row-start: 3;
            grid-column-start: 2;
            border-width: 0px 5px 5px 5px;
        }

        #cross .left {
            grid-row-start: 2;
            grid-column-start: 3;
            border-width: 5px 5px 5px 0px;
        }

        #cross .center {
            grid-row-start: 2;
            grid-column-start: 2;
            border-width: 0;
        }

        .input-pad {
            grid-row-start: 4;
            grid-column-start: 4;
        }

        .input-pad input {
            width: 93%;
            height: 50px;
            margin-top: 30px;
            padding: 0 10px;
            background-color: #E6E6E6;
            font-family: "Press Start 2P";
            font-size: 20px;
        }

        .bottom-modes {
            grid-row-start: 5;
            grid-row-start: 5;
            grid-column-start: 4;
            display: grid;
            grid-template-columns: 25% 25% 25% 25%;
            grid-template-rows: 40% 20% 40%;
        }

        .black-button {
            background-color: #404040;
            border: #303030 5px solid;
            color: gray;
            cursor: pointer;
        }

        .pokedex-mode {
            grid-row-start: 3;
            grid-column-start: 1;
            grid-column-end: 3;
        }

        .game-mode {
            grid-row-start: 3;
            grid-column-start: 3;
            grid-column-end: 5;
        }

        .level-button {
            background-color: #1697F9;
            border: #71CDF4 5px solid;
            color: gray;
            cursor: pointer;
        }
    </style>
{% endblock %}